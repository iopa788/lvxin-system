<?xml version="1.0" encoding="utf-8"?>
<com.farsunset.lvxin.component.ToMessageTextView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/to_message_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
 >


    <com.farsunset.lvxin.component.WebImageView
        android:id="@+id/logo"
        android:layout_width="40dip"
        android:layout_marginRight="5dp"
        android:layout_height="40dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/item_background_single"
        android:padding="1dp"
        app:srcCompat="@drawable/icon_def_head" />

    <com.farsunset.lvxin.component.EmoticonTextView
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:layout_marginLeft="80dp"
        android:layout_toLeftOf="@id/logo"
        android:autoLink="web|phone|email"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/chating_background_to"
        android:textColor="@color/text_chat_to_color"
        android:textSize="@dimen/chating_text_size" />

    <include layout="@layout/layout_message_statusbox" />

</com.farsunset.lvxin.component.ToMessageTextView>